@model IEnumerable<ICI.ProvaCandidato.Web.Models.Tag>

@{
    ViewData["Title"] = "Tags";
}

<h1>Tags</h1>

<p>
    <a asp-action="Create">Criar Nova Tag</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                Descrição
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TagId">Editar</a> |
                <a asp-action="Delete" asp-route-id="@item.TagId">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>